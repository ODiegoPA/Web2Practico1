<%- include('../../components/header.ejs') %>

<style>
    .main-container {
        height: 100vh;
        background-image: url('https://cloudfront-us-east-1.images.arcpublishing.com/elespectador/N5EPKUWMIVH4RCPNDM7OP5OKQQ.jpeg');
        background-size: cover;
        background-position: center;
    }
    .full-height {
        height: 100%;
    }
</style>

<div class="main-container">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center full-height">
            <div class="col-lg-6 col-md-8 col-sm-10 col-xxl-4">
                <div class="card mt-5 text-center">
                    <div class="card-body">
                        <h5 class="card-title">Registro de usuarios</h5>
                        <form method="post" action="">
                            <div class="mt-2">
                                <label>Email</label>
                                <input required class="form-control" type="email" name="email" placeholder="Email" value="">
                            </div>
                            <div class="mt-2">
                                <label>Nombre de usuario</label>
                                <input required class="form-control" type="text" name="username" placeholder="Nombre de usuario" value="">
                            </div>
                            <div class="mt-2">
                                <label>Password</label>
                                <input required class="form-control" type="password" name="password" placeholder="Ingrese la contraseña">
                            </div>
                            <div class="mt-2">
                                <input class="btn btn-primary" type="submit" value="Enviar">
                            </div>
                        </form>
                        <a href="/login">Ya tenés cuenta? Inicia sesion acá</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../components/footer.ejs') %>
